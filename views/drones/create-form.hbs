<h2>Create a new drone!</h2>

<form action='{{actionUrl}}' method='POST'>
  <label for='name'>Name</label>
  {{> textInput value='' fieldName='name' }}
  <label for='propellers'>Number of Propellers</label>
  <input type='text' name='propellers' id='propellers' placeholder='e.g. 4' />
  <label for='maxSpeed'>Top Speed</label>
  <input type='text' name='maxSpeed' id='maxSpeed' placeholder='e.g. 20' />
  <input type='submit' value='Add Drone' />
</form>

